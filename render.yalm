databases:
  - name: builds-codex
    plan: free
    databaseName: builds-codex
    user: mario

services:
  - type: web
    name: builds-codex
    plan: free
    dockerfilePath: Dockerfile
    envVars:
      - key: APP_ENV
        value: production
      - key: APP_DEBUG
        value: false
      - key: LOG_CHANNEL
        value: stderr
      - fromDatabase:
          name: builds-codex
          property: connectionString
    postDeployCommand: ./post-deploy.sh
